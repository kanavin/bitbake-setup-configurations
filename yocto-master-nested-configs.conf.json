{
    "description": "(future) Official Yocto configurations: poky, poky-altcfg, poky-tiny, for qemux86-64 and arm64 (defined with nested configurations)",
    "sources": {
        "bitbake": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/bitbake"
                    }
                },
                "rev": "master"
            },
            "path": "bitbake"
        },
        "openembedded-core": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.openembedded.org/openembedded-core"
                    }
                },
                "rev": "master"
            },
            "path": "openembedded-core"
        },
        "meta-yocto": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.yoctoproject.org/meta-yocto"
                    }
                },
                "rev": "master"
            },
            "path": "meta-yocto"
        },
        "yocto-docs": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "git://git.yoctoproject.org/yocto-docs"
                    }
                },
                "rev": "master"
            },
            "path": "yocto-docs"
        }
    },
    "bitbake-setup": {
        "configurations": [
        {
            "bb-layers": ["openembedded-core/meta","meta-yocto/meta-yocto-bsp","meta-yocto/meta-poky"],
            "oe-fragments": ["core/yocto/sstate-mirror-cdn"],
            "configurations": [
                {
                    "name" : "qemux86-64-poky",
                    "description": "Poky reference distro build for qemux86-64",
                    "oe-fragments": ["machine/qemux86-64","distro/poky"]
                },
                {
                    "name" : "qemuarm64-poky",
                    "description": "Poky reference distro build for qemuarm64",
                    "oe-fragments": ["machine/qemuarm64","distro/poky"]
                },
                {
                    "name" : "qemux86-64-poky-altcfg",
                    "description": "Poky reference distro build for qemux86-64 (alternative config)",
                    "oe-fragments": ["machine/qemux86-64","distro/poky-altcfg"]
                },
                {
                    "name" : "qemuarm64-poky-altcfg",
                    "description": "Poky reference distro build for qemuarm64 (alternative config)",
                    "oe-fragments": ["machine/qemuarm64","distro/poky-altcfg"]
                },
                {
                    "name" : "qemux86-64-poky-tiny",
                    "description": "Poky reference distro build for qemux86-64 (tiny system configuration)",
                    "oe-fragments": ["machine/qemux86-64","distro/poky-tiny"]
                },
                {
                    "name" : "qemuarm64-poky-tiny",
                    "description": "Poky reference distro build for qemuarm64 (tiny system configuration)",
                    "oe-fragments": ["machine/qemuarm64","distro/poky-tiny"]
                }
            ]
        }
        ]
    },
    "version": "1.0"
}
